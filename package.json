{
  "private": true,
  "name": "my-nextron-app",
  "description": "My Video Upload app",
  "version": "1.0.0",
  "author": "Stefan Schutte",
  "main": "app/background.js",
  "scripts": {
    "dev": "nextron",
    "build": "nextron build",
    "build:win": "nextron build --win",
    "build:mac": "nextron build --mac",
    "build:linux": "nextron build --linux",
    "build:all": "nextron build --win --mac --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.example.nextron",
    "productName": "Video Upload App",
    "copyright": "Copyright Â© 2025",
    "mac": {
      "category": "public.app-category.video",
      "target": ["dmg"]
    },
    "win": {
      "target": ["nsis"]
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Video"
    },
    "files": [
      "app/**/*",
      "main/**/*",
      "renderer/**/*"
    ],
    "directories": {
      "output": "release"
    }
  },
  "dependencies": {
    "@aws-amplify/auth": "^6.10.1",
    "@aws-amplify/core": "^6.9.2",
    "@aws-sdk/client-cognito-identity-provider": "^3.734.0",
    "@aws-sdk/client-dynamodb": "^3.734.0",
    "@aws-sdk/client-s3": "^3.735.0",
    "@aws-sdk/lib-dynamodb": "^3.734.0",
    "@aws-sdk/lib-storage": "^3.735.0",
    "@aws-sdk/s3-request-presigner": "^3.735.0",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-select": "^2.1.5",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-switch": "^1.1.2",
    "@types/uuid": "^10.0.0",
    "amazon-cognito-identity-js": "^6.3.12",
    "aws-amplify": "^6.12.2",
    "electron-serve": "^1.3.0",
    "electron-store": "^8.2.0",
    "lucide-react": "^0.474.0",
    "oidc-client-ts": "^3.1.0",
    "react-hot-toast": "^2.5.1",
    "react-oidc-context": "^3.2.0",
    "react-switch": "^7.1.0",
    "shadcn-ui": "^0.9.4",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@types/react": "^18.2.52",
    "autoprefixer": "^10.4.19",
    "dotenv": "^16.4.7",
    "electron": "^34.0.0",
    "electron-builder": "^24.13.3",
    "next": "^14.2.4",
    "nextron": "^9.5.0",
    "postcss": "^8.4.38",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.7.3"
  }
}
